.playbuttons {
    display: flex;
    font-family: var(--Font-title);
    flex: 0;
    padding: 0 40vw 3vh 4vw;

    div {
        flex-direction: column;
        display: flex;
        padding: 2vw;
        padding-left: 0;
        color: #aaa;
        height: 7vw;
        flex: 1;
    }

    div:first-of-type {
        color: white;
    }

    div[class*=dropdown-toggle] {
        display: block;
        height: 3vw;
    }

    div[class*=open] div[class*=dropdown-toggle] {
        background-color: white;
    }

    div[class*=dropdown-toggle] i {
        position: absolute;
        width: 0;
        height: 0;
        top: 0;
        right: 1.8vw;
    }

    div[class*=dropdown-toggle] > span:first-child {
        font-family: var(--Font-title);
        font-weight: bolder;
        font-size: 2vw!important;
        padding: 0.8vw!important;
    }

    div[class*=dropdown-menu] ul {
        margin-top: 2vw;
    }

    div[class*=dropdown-menu] li {
        text-align: center;
        font-size: 1.5vw;
    }

    & > div > *:first-child {
        padding: 0;
        border: 1px solid #aaa;
        background-color: transparent;
        color: white;
        border-radius: 4px;
        flex: 1
        font-weight: bold;
    }

    div:first-of-type button {
        background-color: #ff1744;
        border-color: #ff1744;
    }

    span {
        margin: 0.4vw auto;
    }
}