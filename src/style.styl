.detail {
    z-index: 10;
    position: absolute;
    width: 100%;
    height: 90%;
    display: flex;
    flex-direction: column;
}

.container {
    display: flex;
    flex: 2;
}

.backdrop:before {
    content: "";
    display:block;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(10,10,10, 0.8);
}

.backdrop {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    z-index: 0;
    filter: brightness(60%)
}
.statusbar {
    display: flex;
    justify-content: space-between;
    color: white;
}
.statusbar .title {
    font-family: 'Dosis', sans-serif;
    font-weight: bolder;
    font-size: 1.5vw;
    padding: 1vw;
}

.statusbar div {
    padding: 2vh 2vw 0 2vw;
}

.cover {
    padding: 4vw;
    filter: drop-shadow(0px 0px 2px)
}

.cover img {
    width: 25vw;
    border-radius: 10px;
    margin-bottom: -10vw;
}

.info {
    padding: 4vw 0 0vw 4vw;
    color: white;
    display: flex;
    flex-direction: column;
    flex: 2;

    h1 {
        font-family: 'Dosis', sans-serif;
        font-weight: bolder;
        font-size: 4vw;
        margin: 4vw auto 1vw 0;
    }

    p[class=synopsis] {
        margin-top: 1vw;
        font-size: 2vw;
        flex: 2
    }
}

.playbuttons {
    display: flex;
    font-family: 'Dosis', sans-serif;

    div {
        flex-direction: column;
        display: flex;
        padding: 2vw;
        padding-left: 0;
        color: #aaa;
        width: 10vw;
        height: 7vw;
    }

    div:first-of-type {
        color: white;
    }

    div[class*=dropdown-toggle] {
        display: block;
        height: 3vw;
    }

    div[class*=open] div[class*=dropdown-toggle] {
        background-color: white;
    }

    div[class*=dropdown-toggle] i {
        position: absolute;
        width: 0;
        height: 0;
        top: 0;
        right: 1.8vw;
    }

    div[class*=dropdown-toggle] > span:first-child {
        font-family: 'Dosis', sans-serif;
        font-weight: bolder;
        font-size: 2vw!important;
        padding: 0.8vw!important;
    }

    div[class*=dropdown-menu] ul {
        margin-top: 1vw;
    }

    div[class*=dropdown-menu] li {
        width: 7vw;
        text-align: center;
    }

    & > div > *:first-child {
        padding: 0;
        border: 1px solid #aaa;
        background-color: transparent;
        color: white;
        border-radius: 4px;
        width: 10vw;
        height: 4.5vw;
        font-weight: bold;
    }

    div:first-of-type button {
        background-color: #ff1744;
        border-color: #ff1744;
    }

    span {
        margin: 0.4vw auto;
    }
}


.infobar {
    font-family: 'Dosis', sans-serif;
    font-weight: 600;
    color: #888
}

.infobar span:before {
    content: "·";
    padding: 1vh;
    font-size: 4vw;
}

.infobar span:first-of-type:before {
    content: "";
}

.selector {
    ul {
        display: flex;
    }

    li {
        display: block;
        padding: 1vw;
        color: white;
    }

    li[class*=seen] {
        filter: brightness(0.6) ;
        color: grey;
    }

    li[class*=seen] h2:before {
        content: "✓ "
    }

    li[class*=active] {
        color: #ff1744
    }

    li.active img {
        border: 2px solid #ff1744;
    }

    li h2 {
        font-family: 'Dosis', sans-serif;
        font-size: 1.2vw;
        font-weight: 600;
        margin: auto;
    }

    .seasons {
        font-family: 'Dosis', sans-serif;
        font-size: 1.5vw;
        font-weight: 600;
        padding: 0 auto;
        margin-bottom: -15px;
    }

    ul.episodes {
        background-color: black;
        padding-top: 1vw;
        overflow-x: scroll;
    }

    ul.episodes img {
        border-radius: 4px;
        width: 13vw;
        height: 8vw;
    }
}

